# MySQL database configuration for the School Management System
# These values are read by config.py using python-dotenv.

# Hostname or IP of your MySQL server (usually localhost)
DB_HOST=localhost

# MySQL port (default 3306)
DB_PORT=3306

# MySQL user that owns the project_lms database
DB_USER=root

# Password for the above MySQL user (can be blank on local dev)
DB_PASSWORD=

# Database name used by this application
DB_NAME=project_lms
